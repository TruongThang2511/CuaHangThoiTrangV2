@model List<Donhang>
@if(Model != null && Model.Count() > 0){
    <table>
        <tbody>
            <tr>
                <th>Đơn hàng</th>
                <th>Ngày</th>
                <th>Trạng thái</th>
                <th>Tổng cộng</th>
                <th></th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td><a class="account-order-id" href="javascript:void(0)">#@item.MaDh</a></td>
                    <td>@item.NgayDat</td>
                    <td>@item.TrangThai</td>
                    <td>@item.Tonggiatri.ToString("#,##0") vnđ</td>
                    <td>
                        <a href="javascript:void(0)" class="btn btn-secondary btn-primary-hover"><span>Xem</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>Chưa có đơn hàng</p>
}