@model CuaHangThoiTrangV2.Models.Loai

@{
    ViewData["Title"] = "Xóa loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa loại sản phẩm</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Loại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenL)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaL" />
        <input type="submit" value="Delete" class="btn btn-gradient-primary btn-rounded btn-fw" /> |
        <button type="button" class="btn btn-gradient-danger btn-rounded btn-fw">
            <a style="text-decoration:none; color:white" asp-action="Index">Back to List</a>
        </button>
    </form>
</div>
