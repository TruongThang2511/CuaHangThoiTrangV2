@model CuaHangThoiTrangV2.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa quyền truy cập</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaRole" />
            <div class="form-group">
                <label asp-for="TenRole" class="control-label">Quyền truy cập</label>
                <input asp-for="TenRole" class="form-control" />
                <span asp-validation-for="TenRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-gradient-primary btn-rounded btn-fw" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-gradient-danger btn-rounded btn-fw"><a style="text-decoration:none; color:white" asp-action="Index">Back to List</a></button>
</div>

