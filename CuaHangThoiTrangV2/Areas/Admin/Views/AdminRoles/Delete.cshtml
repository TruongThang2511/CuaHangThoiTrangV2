@model CuaHangThoiTrangV2.Models.Role

@{
    ViewData["Title"] = "Xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa quyền truy cập</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Quyền truy cập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenRole)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaRole" />
        <input type="submit" value="Delete" class="btn btn-gradient-primary btn-rounded btn-fw" /> 
        <button type="button" class="btn btn-gradient-danger btn-rounded btn-fw">
            <a style="text-decoration:none; color:white" asp-action="Index">Back to List</a></button>
    </form>
</div>
